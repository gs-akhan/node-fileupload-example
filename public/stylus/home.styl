
*:focus, *:active
  outline: none !important

.fileUpload
  position: relative
  overflow: hidden
  margin: 10px

.fileUpload input.upload

  position: absolute
  top: 0
  right: 0
  margin: 0
  padding: 0
  font-size: 20px
  cursor: pointer
  opacity: 0
  filter: unquote("alpha(opacity=0)")

.imageThumb
  width : 100px
  height : 100px
  margin-top : 15px
  margin-right : 15px
  border-radius : 3px
  cursor: pointer

.something

  border-radius : 5px


.uploadedGallery

  margin-top : 100px
  border-top : 1px solid #ddd


